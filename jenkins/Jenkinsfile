pipeline {
	agent none
	stages {
		stage('Build') {
			agent {
				docker {
					image 'maven:3'	
					args '-v $HOME/.m2:/root/.m2'
				}
			}
			steps {
				sh 'mvn -B -DskipTests clean package'	
				script {			
					stash name: 'target', includes: 'target/calc-1.0-SNAPSHOT.jar'
				}
			}
		}
		stage('Create docker image') {
			agent any
			steps {
				script {
					unstash 'target'
				}
				sh 'docker build .'
			}	 
		}
	}
}
