pipeline {
	agent none
	stages {
		stage('Build') {
			agent {
				docker {
					image 'maven:3'	
					args '-v $HOME/.m2:/root/.m2'
				}
			}
			steps {
				sh 'mvn -B -DskipTests clean package'
				dir './target'
				stash 'calc-1.0-SNAPSHOT.jar'
				dir './..'
				pwd
			}
		}
		stage('Create docker image') {
			agent any
			steps {
				script {
					if (true) {
						println 'HEYYY!!!!!'
					}
				}
				
			//	sh 'mkdir target'
			//	dir './target'
			//	unstash 'calc-1.0-SNAPSHOT.jar'
			//	dir './..'
				sh 'docker build .'
			}	 
		}
	}
}
